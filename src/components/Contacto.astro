---
import Titulo from "./landing/Titulo.astro";
import {contactos} from "../data/contactos";
---

<footer id="Contacto" class="flex flex-col gap-2 p-4">
    <Titulo>Contacto</Titulo>

    <div class="p-4 grid grid-cols-1 gap-6 sm:grid-cols-2">
        {
            contactos.map(({icono, nombre, descripcion, url}) => (
                <div class="border border-blue-800 rounded-md flex p-3 gap-5 items-center">
                    <a href={url} download={nombre === "CV" ? "Alejandro_CV.pdf" : null} target="_blank" class="bg-[#1e324d] hover:bg-blue-800 duration-200 animate-pulse rounded-full p-3 cursor-pointer">
                        <img class="w-9" src={icono} alt={nombre} />
                    </a>

                    <div class="text-white">
                        <span class="tracking-wide font-bold">{nombre}</span>
                        <p>{descripcion}</p>
                    </div>
                </div>
            ))
        }
    </div>

    <div class="p-4 text-center">
        <span class="text-white font-bold tracking-wide">© Alejandro Coreño | 2024 </span>
    </div>
</footer>

