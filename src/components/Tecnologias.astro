---
import { tecnologiasFront, tecnologiasBack } from "../data/tecnologias"
import Titulo from "./landing/Titulo.astro";
---

<section id="Tecnologias" class="p-4 flex flex-col gap-5">
    <Titulo>Tecnologias</Titulo>

    <div class="h-60 border-gray-600 border flex flex-col gap-3 py-4 px-3">
        <div class="flex flex-col gap-2">
            <h2 class="text-white tracking-wide font-bold">FrontEnd</h2>
            <hr class="border border-blue-800" />
        </div>

        <div class="h-full flex justify-center items-center gap-8 flex-wrap">
            { tecnologiasFront.map(({icon}) => (
                <img class="drop-shadow-xl w-9" src={icon} />
            ))}
        </div>
    </div>

    <div class="h-60 border-gray-600 border py-4 px-3">

        <div class="flex flex-col gap-2">
            <h2 class="text-white tracking-wide font-bold">Backend</h2>
            <hr class="border border-blue-800" />
        </div>

        <div class="h-full flex justify-center items-center gap-8 flex-wrap">
            { tecnologiasBack.map(({icon}) => (
                <img class="drop-shadow-xl w-9" src={icon} />
            ))}
        </div>
    </div>
</section>